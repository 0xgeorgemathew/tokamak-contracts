{
  "name": "cross-chain-swap",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git@github.com:zumzoom/solidity-template.git"
  },
  "license": "MIT",
  "devDependencies": {
    "rimraf": "5.0.5",
    "solc": "0.8.23",
    "solhint": "3.6.2"
  },
  "scripts": {
    "clean": "rimraf coverage && forge clean",
    "coverage": "mkdir -p coverage && forge coverage --report lcov --ir-minimum --report-file coverage/lcov.info",
    "coverage:html": "bash scripts/coverage.sh",
    "doc": "forge doc --build --out documentation",
    "lint": "yarn run lint:sol && yarn run lint:test",
    "lint:fix": "yarn run lint:sol:fix && yarn run lint:test:fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
    "lint:test": "solhint --max-warnings 0 \"test/**/*.sol\"",
    "lint:test:fix": "solhint --max-warnings 0 \"test/**/*.sol\" --fix",
    "test": "forge test -vvv"
  }
}
